# Genealogy Application Environment Configuration
# Copy this file to .env and fill in your values

# Database
GENEALOGY_DATABASE_PATH=./data/app.db

# OCRmyPDF Settings
GENEALOGY_OCRMYPDF_EXECUTABLE=ocrmypdf
GENEALOGY_OCRMYPDF_LANGUAGE=eng
GENEALOGY_OCRMYPDF_REMOVE_BACKGROUND=false
GENEALOGY_OCRMYPDF_FAST_WEB_VIEW_MB=200
GENEALOGY_OCRMYPDF_TIMEOUT_SECS=600

# LLM Provider: Choose "ollama" for local LLM or "openrouter" for cloud API
GENEALOGY_LLM_PROVIDER=openrouter

# Ollama Settings (for local LLM)
GENEALOGY_OLLAMA_ENABLED=false
GENEALOGY_OLLAMA_BASE_URL=http://localhost:11434
GENEALOGY_OLLAMA_OCR_MODEL=llama3.2-vision:11b
GENEALOGY_OLLAMA_PARSE_MODEL=qwen3:8b
GENEALOGY_OLLAMA_TIMEOUT_SECS=30
GENEALOGY_OLLAMA_USE_HYBRID_OCR=true
GENEALOGY_OLLAMA_USE_CONTEXT_PARSE=true
GENEALOGY_OLLAMA_CONFIDENCE_THRESHOLD=0.7

# OpenRouter Settings (for cloud LLM)
GENEALOGY_OPENROUTER_API_KEY=your-api-key-here

# Free models (rate-limited but no cost):
GENEALOGY_OPENROUTER_OCR_MODEL=qwen/qwen2.5-vl-32b-instruct:free
GENEALOGY_OPENROUTER_PARSE_MODEL=meta-llama/llama-3.3-70b-instruct:free

# Alternative free options:
# GENEALOGY_OPENROUTER_OCR_MODEL=nvidia/nemotron-nano-12b-v2-vl:free
# GENEALOGY_OPENROUTER_PARSE_MODEL=qwen/qwen-2.5-72b-instruct:free
# GENEALOGY_OPENROUTER_PARSE_MODEL=nousresearch/hermes-3-llama-3.1-405b:free

# Paid alternatives (better reliability, minimal cost):
# GENEALOGY_OPENROUTER_OCR_MODEL=openai/gpt-4o-mini
# GENEALOGY_OPENROUTER_PARSE_MODEL=openai/gpt-4o-mini

GENEALOGY_OPENROUTER_TIMEOUT_SECS=30
GENEALOGY_OPENROUTER_USE_HYBRID_OCR=false
GENEALOGY_OPENROUTER_USE_CONTEXT_PARSE=true
